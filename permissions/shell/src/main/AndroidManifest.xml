<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.ekaralamov.sdr.driver.permissions"
    >

    <application
        android:allowBackup="true"
        android:supportsRtl="true"
        >

        <activity
            android:name=".GetTunerAccessActivity"
            android:exported="true"
            android:screenOrientation="locked"
            />
        <!--
        Android's USB permission flow misbehaves on configuration change
        â€”it signals back as if permission has been denied, which
        causes `GetTunerAccessActivity` to return the corresponding result.
        To avoid the most common configuration change, the screen orientation is locked.
        -->

        <activity
            android:name=".DummyActivity"
            android:theme="@android:style/Theme.Translucent"
            >
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
            </intent-filter>

            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/device_filter"
                />
        </activity>
    </application>

</manifest>
