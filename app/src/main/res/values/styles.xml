<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MainActivity" parent="@android:style/Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/blue_sky_gradient</item>
        <item name="android:statusBarColor">@color/light_sky_blue</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:colorPrimary">@android:color/black</item>
    </style>

    <style name="AboutTextView">
        <item name="android:textSize" tools:ignore="SpUsage">14dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="AttributionDetails">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

</resources>
